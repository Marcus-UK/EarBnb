<style>
  h1 {
    text-align:center;
    margin:30px auto 0 auto;
    font-size: 40px;
    font-weight:bold;
  }

  .box {
    width:600px;
    border-radius:5px;
    padding: 10px;
    box-shadow: -5px 5px 5px rgba(8,116,171,0.7);
    margin:20px auto auto auto;
    display:block;
    background-color:LightGray;
  }

  div
{
  padding:5px;
}
label
{
  display:block;
}
textarea
{
  min-height:100px;
  resize: none;
}
input, select,textarea
{
  min-width:150px;
}

input[type="submit"]
{
  -webkit-appearance:button;
  padding:5px;
}
</style>


<h1>New Property Listing</h1>

<form class="" action="/properties" method="post" enctype="multipart/form-data">

  <div>
    <label for="address1">Enter property address:</label>
    <input id="address1" type="text" name="address1" value="">
  </div>

  <div>
    <label for="price">Price per day: (Â£)</label>
    <input id="price" type="number" name="price" value="">
  </div>

  <div>
    <label for="bedrooms">Number of bedrooms</label>
    <select id="bedrooms" name="bedrooms">
      <% array =(1..10).to_a
      array.map do |x| %>
        <%= "<option value='#{x}'>#{x}</option>" %>
      <% end %>
    </select>
  </div>
  <div>
    <label for="description">Enter a description for the property:</label>
    <textarea id ="description" name="description"></textarea>
  </div>

  <div>
    <label for="file"></label>
    <input type="file" name="file">
  </div>
    <input type="submit" name="submit" value="Add">
</form>

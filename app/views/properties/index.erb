<style>
  h1 {
    text-align:center;
    margin:30px auto 0 auto;
    font-size: 40px;
    font-weight:bold;
  }

  .box {
    width:600px;
    border-radius:5px;
    padding: 10px;
    box-shadow: -5px 5px 5px rgba(8,116,171,0.7);
    margin:20px auto auto auto;
    display:block;
    background-color:LightGray;
  }
</style>

<h1> Properties </h1>

<ul>
<% @properties.each do |property| %>
  <li>
  <% id = property.id
  address1 = property.address1
  %>
  <a href="property/<%= id %>">
    <figure>
      <!-- <img src="<%= url %>"> -->
      <caption><%= address1 %> </caption>
    </figure>
  </a>
  </li>
<% end %>
</ul>
<a href="/properties/new">Add property</a>
